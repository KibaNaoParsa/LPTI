													$nomet = $n->NOME;
												}
												
												$ano = date("Y");	
												echo "Identificação: ".$USUARIO[0]->LOGIN.br()."Turma: ".$TURMA[0]->SERIE."º ".$nomet.br();
												$atributos = array('name'=>'formulario_cadastro', 'id'=>'formulario_cadastro');
